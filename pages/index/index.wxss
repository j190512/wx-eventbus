.page {
  width: 100vw;
  height: 100vh;
  background-color: #e8e8e8;
}
.user-header,.item {
  height: 150rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 20rpx;
}
.head-portrait {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}
.info,.item>.text {
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color: #666;
  margin: 0 20rpx;
}
.info .nickname {
  font-size: 40rpx;
  color: #333;
}
.more::after {
  content: '\2228';
  font-size: 35rpx;
  display: flex;
  color: #999;
  justify-content: flex-start;
  align-items: center;
  transform: rotateZ(-90deg);
}
.icon-menu {
  margin-top: 20rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: space-evenly;
}
.list-menu {
  margin-top: 20rpx;
}
.item {
  padding: 0 3prpx;
  height: 100rpx;
  border-bottom: 1px solid #e8e8e8;
}











